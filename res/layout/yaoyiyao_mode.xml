<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    android:orientation="vertical" 
    android:id="@+id/rl_main" 
    android:focusable="true" 
    android:focusableInTouchMode="true" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:background="@color/black"
  	xmlns:android="http://schemas.android.com/apk/res/android">
  	<View 
  	    android:layout_width="fill_parent"
  	    android:layout_height="0px"
  	    android:layout_weight="30"/>
  	<LinearLayout 
  	    android:layout_width="fill_parent"
  	    android:layout_height="0px"
  	    android:layout_weight="62">
  	    <View
  	        android:layout_width="0px"
  	        android:layout_height="fill_parent"
  	        android:layout_weight="7"/>
  	    <RelativeLayout 
  	        android:layout_width="0px"
  	        android:layout_height="fill_parent"
  	        android:layout_weight="121"
  	        android:background="@drawable/child_title_bg">
  	        <TextView 
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_centerInParent="true"
  	            android:text="@string/yaoyiyao_mode"
  	            android:textColor="@color/item_text_color"
                android:textSize="@dimen/item_text_size"/>
  	        <LinearLayout 
  	            android:layout_width="fill_parent"
  	            android:layout_height="fill_parent">
<!--   	            <View 
  	                android:layout_width="0px"
  	                android:layout_height="fill_parent"
  	                android:layout_weight="25"/> -->
  	            <RelativeLayout 
  	                android:layout_width="0px"
  	                android:layout_height="fill_parent"
  	                android:layout_weight="100">
  	                <ImageView 
  	                    android:id="@+id/back_icon"
  	                    android:layout_width="fill_parent"
  	                    android:layout_height="fill_parent"
  	                    android:clickable="true"
  	                    android:src="@drawable/child_back_icon_selector"/>
  	            </RelativeLayout>
  	            <View 
  	                android:layout_width="0px"
  	                android:layout_height="fill_parent"
  	                android:layout_weight="384"/>
  	        </LinearLayout>
  	    </RelativeLayout>
  	    <View 
  	        android:layout_width="0px"
  	        android:layout_height="fill_parent"
  	        android:layout_weight="7"/>
  	</LinearLayout>
  	<LinearLayout 
  	    android:layout_width="fill_parent"
  	    android:layout_height="0px"
  	    android:layout_weight="834"
  	    android:orientation="vertical">
  	    <FrameLayout 
  	        android:layout_width="fill_parent"
  	        android:layout_height="0px"
  	        android:layout_weight="683">
  	        <ImageView 
  	            android:id="@+id/yaoyiyao_content_img"
  	            android:layout_width="fill_parent"
  	            android:layout_height="fill_parent"
  	            android:src="@drawable/yaoyiyao_content_selector"/>
  	        <LinearLayout 
  	            android:layout_width="fill_parent"
  	            android:layout_height="fill_parent"
  	            android:orientation="vertical">
  	            <View 
  	                android:layout_width="fill_parent"
  	                android:layout_height="0px"
  	                android:layout_weight="125"/>
  	            <RelativeLayout 
  	                android:layout_width="fill_parent"
  	                android:layout_height="0px"
  	                android:layout_weight="12">
  	                <TextView 
  	                    android:layout_width="wrap_content"
  	                    android:layout_height="wrap_content"
  	                    android:layout_alignParentTop="true"
  	                    android:layout_centerHorizontal="true"
                        android:text="@string/yaoyiyao_help"
                        android:textColor="@color/white"
                        android:textSize="@dimen/yaoyiyao_item_text_size"/>
  	            </RelativeLayout>
  	        </LinearLayout>
  	    </FrameLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="108"
            android:background="@drawable/shake_background"
            android:orientation="horizontal">
            <View 
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>
            <LinearLayout 
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="7">
                <com.yuning.view.ShakeProgressBar 
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"/>
            </LinearLayout>
            <View 
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="43"/>
  	</LinearLayout>

</LinearLayout>