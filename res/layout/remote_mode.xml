<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dip"
    android:paddingLeft="40dip"
    android:paddingRight="40dip"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/background_common" >

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="60dip"
	    android:gravity="center" >
	    
	    <Button
	        android:id="@+id/remote_mode_add_btn"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="6"
	        android:text="@string/remote_mode_add"
	        android:textSize="@dimen/text_size_medium"
	        android:textColor="@color/white"
	        android:background="@drawable/remote_mode_btn_bg_selector" />
	
	    <ImageView
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:src="@drawable/ai_talk_icon_less_normal"
	        android:contentDescription="@null"
	        android:visibility="gone" />
	        
	</LinearLayout>

    <ListView
        android:id="@+id/remote_mode_link_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dip"
        android:divider="@android:color/transparent"
        android:dividerHeight="20dip"
        android:scrollbars="none"
        android:drawSelectorOnTop="false"
        android:listSelector="@null" >
    </ListView>

</LinearLayout>
