<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_common" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/remote_mode_launcher"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/pink_tips" />
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:orientation="horizontal"
            android:background="@drawable/remote_mode_info_bg">

            <View 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>
            
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/remote_mode_invitation_code"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/pink_tips" />
            
            <View 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            
            <TextView
                android:id="@+id/remote_mode_launcher_text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text=""
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/pink_tips" />

            <View 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>
        </LinearLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:orientation="horizontal"
            android:background="@drawable/remote_mode_info_bg">

            <View 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>
            
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/remote_mode_send_to"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/pink_tips" />
            
            <View 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/remote_mode_send_sms"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:src="@drawable/remote_mode_send_sms_selector"
                android:contentDescription="@null" />
            
            <View 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            
            <ImageView
                android:id="@+id/remote_mode_send_weixin"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:src="@drawable/remote_mode_send_weixin_selector"
                android:contentDescription="@null" />

            <View 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        </LinearLayout> 
        
        <View 
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="4"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/remote_mode_add_info_section_bg" >
        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/remote_mode_receiver"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/pink_tips" />
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:orientation="horizontal"
            android:background="@drawable/remote_mode_info_bg">

            <View 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>
            
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/remote_mode_invitation_code"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/pink_tips" />
            
            <View 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            
            <EditText
                android:id="@+id/remote_mode_invitation_edit"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:inputType="number"
                android:maxLength="8"
                android:background="@color/trans"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/pink_tips" />

            <View 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>
        </LinearLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="9"/>
    </LinearLayout>

</LinearLayout>
