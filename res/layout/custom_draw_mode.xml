<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_common">
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>

    <FrameLayout 
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="10"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:background="@drawable/hand_draw_image_bg">
        <ImageView 
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@null"/>
    </FrameLayout>
        
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="10"
        android:orientation="vertical">
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="118">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/hand_draw_mode_tips"
                android:textColor="@color/pink_tips"
                android:textSize="@dimen/text_size_small"/>
        </RelativeLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="30"/>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="184">
            <View 
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="868"/>
            <ImageView 
                android:id="@+id/custom_draw_start_stop"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="184"
                android:src="@drawable/hand_draw_play_selector"
                android:clickable="true"
                android:onClick="onBtnStart"
                android:contentDescription="@null"/>
            <View 
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="868"/>
        </LinearLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="30"/>
    </LinearLayout>
</LinearLayout>
