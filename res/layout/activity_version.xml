<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <View 
  	    android:layout_width="fill_parent"
      	android:layout_height="0px"
      	android:layout_weight="30"/>
    <LinearLayout 
  	    android:layout_width="fill_parent"
  	    android:layout_height="0px"
  	    android:layout_weight="62">
  	    <View
  	        android:layout_width="0px"
  	        android:layout_height="fill_parent"
  	        android:layout_weight="7"/>
  	    <RelativeLayout 
  	        android:layout_width="0px"
  	        android:layout_height="fill_parent"
  	        android:layout_weight="121"
  	        android:background="@drawable/child_title_bg">
  	        <TextView 
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_centerInParent="true"
  	            android:text="@string/set_mode_version"
  	            android:textColor="@color/item_text_color"
                android:textSize="@dimen/item_text_size"/>
  	        <LinearLayout 
  	            android:layout_width="fill_parent"
  	            android:layout_height="fill_parent">
<!--   	        <View 
  	                android:layout_width="0px"
  	                android:layout_height="fill_parent"
  	                android:layout_weight="25"/> -->
  	            <RelativeLayout 
  	                android:layout_width="0px"
  	                android:layout_height="fill_parent"
  	                android:layout_weight="100">
  	                <ImageView 
  	                    android:id="@+id/back_icon"
  	                    android:layout_width="fill_parent"
  	                    android:layout_height="fill_parent"
  	                    android:clickable="true"
  	                    android:src="@drawable/child_back_icon_selector"/>
  	            </RelativeLayout>
  	            <View 
  	                android:layout_width="0px"
  	                android:layout_height="fill_parent"
  	                android:layout_weight="384"/>
  	        </LinearLayout>
  	    </RelativeLayout>
  	    <View 
  	        android:layout_width="0px"
  	        android:layout_height="fill_parent"
  	        android:layout_weight="7"/>
  	</LinearLayout>
  	<LinearLayout 
  	    android:layout_width="fill_parent"
  	    android:layout_height="0px"
  	    android:layout_weight="834"
  	    android:orientation="vertical">
  	    <View 
  	        android:layout_width="fill_parent"
  	        android:layout_height="0px"
  	        android:layout_weight="304"/>
  	    <LinearLayout 
  	        android:layout_width="fill_parent"
  	        android:layout_height="0px"
  	        android:layout_weight="224"
  	        android:gravity="center">
<!--   	        <View 
  	            android:layout_width="0px"
  	            android:layout_height="fill_parent"
  	            android:layout_weight="301"/> -->
  	        <LinearLayout 
  	            android:layout_width="wrap_content"
  	            android:layout_height="fill_parent"
  	            android:orientation="vertical"
  	            android:gravity="center"
  	            android:background="@drawable/child_title_bg">
  	            <TextView 
  	                android:id="@+id/app_version"
  	                android:visibility="gone"
  	                android:layout_width="wrap_content"
  	                android:layout_height="wrap_content"/>
  	            <TextView 
  	                android:id="@+id/fw_version"
  	                android:layout_width="wrap_content"
  	                android:layout_height="wrap_content"/>
  	        </LinearLayout>
<!--   	        <View 
  	            android:layout_width="0px"
  	            android:layout_height="fill_parent"
  	            android:layout_weight="301"/> -->
  	    </LinearLayout>
  	    <View 
  	        android:layout_width="fill_parent"
  	        android:layout_height="0px"
  	        android:layout_weight="1140"/>
  	</LinearLayout>
</LinearLayout>