<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background_common">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="6"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/base_mode_animation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/base_mode_animation_1"
            android:contentDescription="@null" />
        
    </LinearLayout>

  	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="invisible">

  		<TextView
  		    android:id="@+id/textView1"
  		    android:layout_width="match_parent"
  		    android:layout_height="wrap_content"
  		    android:layout_centerInParent="true"
  		    android:gravity="center"
  		    android:text="@string/basic_mode_tips"
  		    android:textSize="@dimen/text_size_small"
  		    android:textColor="@color/pink_tips" />

    </RelativeLayout>

  	<LinearLayout
  	    android:layout_width="match_parent"
  	    android:layout_height="0dip"
  	    android:layout_weight="6"
  	    android:orientation="vertical" >

  	    <View 
  	        android:layout_width="match_parent"
  	        android:layout_height="0dip"
  	        android:layout_weight="2"/>
  	    
  		<TextView
  		    android:id="@+id/base_mode_level"
  		    android:layout_width="match_parent"
  		    android:layout_height="0dip"
  		    android:layout_weight="1"
  		    android:gravity="center"
  		    android:text="@string/basic_mode_levle" 
  		    android:textSize="@dimen/text_size_large"
  		    android:textColor="@color/pink_tips" />

  		<RelativeLayout
  		    android:layout_width="match_parent"
  		    android:layout_height="0dip"
  		    android:layout_weight="2"
  		    android:layout_marginLeft="20dip"
  		    android:layout_marginRight="20dip"
  		    android:background="@drawable/base_mode_btn_bar_bg" >

  			<ImageView
  			    android:id="@+id/base_mode_prev_level"
  			    android:layout_width="wrap_content"
  			    android:layout_height="wrap_content"
  			    android:layout_alignParentLeft="true"
  			    android:layout_centerVertical="true"
  			    android:layout_marginLeft="@dimen/layout_margin"
  			    android:src="@drawable/base_mode_prev_level_selector"
  			    android:contentDescription="@null" />
  			
  			<ImageView
  			    android:id="@+id/base_mode_play_pause"
  			    android:layout_width="wrap_content"
  			    android:layout_height="wrap_content"
  			    android:layout_centerInParent="true"
  			    android:src="@drawable/base_mode_play_selector"
  			    android:contentDescription="@null"
  			    android:visibility="invisible" />
  			
  			<ImageView
  			    android:id="@+id/base_mode_next_level"
  			    android:layout_width="wrap_content"
  			    android:layout_height="wrap_content"
  			    android:layout_alignParentRight="true"
  			    android:layout_centerVertical="true"
  			    android:layout_marginRight="@dimen/layout_margin"
  			    android:src="@drawable/base_mode_next_level_selector"
  			    android:contentDescription="@null" />
  		    
  		</RelativeLayout>
  		
  	    <View 
  	        android:layout_width="match_parent"
  	        android:layout_height="0dip"
  	        android:layout_weight="1"/>
  	    
  	</LinearLayout>
    
</LinearLayout>