<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1284"
            android:background="@drawable/ai_talk_main_bg"
            android:orientation="vertical">
            <View 
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="242"/>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="800">
                <View 
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="140"/>
                <RelativeLayout 
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="800">
                    <TextView 
                        android:id="@+id/ai_talk_less"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:singleLine="false"
                        android:ems="1"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/ai_talk_text_margin"
                        android:layout_marginBottom="@dimen/ai_talk_text_margin"/>
                    <TextView 
                        android:id="@+id/ai_talk_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/ai_talk_text_margin"
                        android:layout_marginRight="@dimen/ai_talk_text_margin"/>
                    <TextView 
                        android:id="@+id/ai_talk_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="false"
                        android:ems="1"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/ai_talk_text_margin"
                        android:layout_marginBottom="@dimen/ai_talk_text_margin"/>
                    <TextView 
                        android:id="@+id/ai_talk_prev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/ai_talk_text_margin"
                        android:layout_marginRight="@dimen/ai_talk_text_margin"/>
                    <LinearLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <View 
                            android:layout_width="0px"
                            android:layout_height="fill_parent"
                            android:layout_weight="127"/>
                        <LinearLayout 
                            android:layout_width="0px"
                            android:layout_height="fill_parent"
                            android:layout_weight="546"
                            android:orientation="vertical">
                            <View 
                                android:layout_width="fill_parent"
                                android:layout_height="0px"
                                android:layout_weight="127"/>
                            <LinearLayout 
                                android:layout_width="fill_parent"
                                android:layout_height="0px"
                                android:layout_weight="546"
                                android:orientation="vertical">
                                <LinearLayout 
                                    android:layout_width="fill_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="1">
                                    <View 
                                        android:layout_width="0px"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"/>
                                    <ImageView 
                                        android:id="@+id/ai_talk_prev_btn"
                                        android:layout_width="0px"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:clickable="true"
                                        android:src="@drawable/ai_talk_prev_selector"/>
                                    <View 
                                        android:layout_width="0px"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"/>
                                </LinearLayout>
                                <LinearLayout 
                                    android:layout_width="fill_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="1">
                                    <ImageView 
                                        android:id="@+id/ai_talk_less_btn"
                                        android:layout_width="0px"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:clickable="true"
                                        android:src="@drawable/ai_talk_less_selector"/>
                                    <View 
                                        android:layout_width="0px"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"/>
                                    <ImageView 
                                        android:id="@+id/ai_talk_more_btn"
                                        android:layout_width="0px"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:clickable="true"
                                        android:src="@drawable/ai_talk_more_selector"/>
                                </LinearLayout>
                                <LinearLayout 
                                    android:layout_width="fill_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="1">
                                    <View 
                                        android:layout_width="0px"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"/>
                                    <ImageView 
                                        android:id="@+id/ai_talk_next_btn"
                                        android:layout_width="0px"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:clickable="true"
                                        android:src="@drawable/ai_talk_next_selector"/>
                                    <View 
                                        android:layout_width="0px"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"/>
                                </LinearLayout>
                            </LinearLayout>
                            <View 
                                android:layout_width="fill_parent"
                                android:layout_height="0px"
                                android:layout_weight="127"/>
                        </LinearLayout>
                        <View 
                            android:layout_width="0px"
                            android:layout_height="fill_parent"
                            android:layout_weight="127"/>
                    </LinearLayout>
                </RelativeLayout>
                <View 
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="140"/>
            </LinearLayout>
            <View 
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="242"/>
        </LinearLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="568"
            android:background="@color/black"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
  	    <View 
  	        android:layout_width="fill_parent"
      	    android:layout_height="0px"
      	    android:layout_weight="30"/>
        <LinearLayout 
  	        android:layout_width="fill_parent"
  	        android:layout_height="0px"
  	        android:layout_weight="62">
  	        <View
  	            android:layout_width="0px"
  	            android:layout_height="fill_parent"
  	            android:layout_weight="7"/>
  	        <RelativeLayout 
  	            android:layout_width="0px"
  	            android:layout_height="fill_parent"
  	            android:layout_weight="121"
  	            android:background="@drawable/child_title_bg">
  	            <TextView 
  	                android:layout_width="wrap_content"
  	                android:layout_height="wrap_content"
  	                android:layout_centerInParent="true"
  	                android:text="@string/ai_talk_mode"
  	                android:textColor="@color/item_text_color"
                    android:textSize="@dimen/item_text_size"/>
  	            <LinearLayout 
  	                android:layout_width="fill_parent"
  	                android:layout_height="fill_parent">
<!--   	                <View 
  	                    android:layout_width="0px"
  	                    android:layout_height="fill_parent"
  	                    android:layout_weight="25"/> -->
  	                <RelativeLayout 
  	                    android:layout_width="0px"
  	                    android:layout_height="fill_parent"
  	                    android:layout_weight="100">
  	                    <ImageView 
  	                        android:id="@+id/back_icon"
  	                        android:layout_width="fill_parent"
  	                        android:layout_height="fill_parent"
  	                        android:clickable="true"
  	                        android:src="@drawable/child_back_icon_selector"/>
  	                </RelativeLayout>
  	                <View 
  	                    android:layout_width="0px"
  	                    android:layout_height="fill_parent"
  	                    android:layout_weight="384"/>
  	            </LinearLayout>
  	        </RelativeLayout>
  	        <View 
  	            android:layout_width="0px"
  	            android:layout_height="fill_parent"
  	            android:layout_weight="7"/>
  	    </LinearLayout>
  	    <LinearLayout 
  	        android:layout_width="fill_parent"
  	        android:layout_height="0px"
  	        android:layout_weight="834"
  	        android:orientation="vertical">
  	        <View 
  	            android:layout_width="fill_parent"
  	            android:layout_height="0px"
  	            android:layout_weight="876"/>
  	        <LinearLayout 
  	            android:layout_width="fill_parent"
  	            android:layout_height="0px"
  	            android:layout_weight="112">
  	            <View 
  	                android:layout_width="0px"
  	                android:layout_height="fill_parent"
  	                android:layout_weight="364"/>
  	            <TextView 
  	                android:id="@+id/ai_talk_stop"
  	                android:layout_width="0px"
  	                android:layout_height="fill_parent"
  	                android:layout_weight="352"
  	                android:gravity="center"
  	                android:textColor="@color/ai_talk_stop_text_color_normal"
  	                android:singleLine="true"
                    android:ellipsize="end"
  	                android:background="@drawable/ai_talk_stop_bg"/>
  	            <View 
  	                android:layout_width="0px"
  	                android:layout_height="fill_parent"
  	                android:layout_weight="364"/>
  	        </LinearLayout>
  	        <RelativeLayout 
  	            android:layout_width="fill_parent"
  	            android:layout_height="0px"
  	            android:layout_weight="200">
  	            <TextView 
  	                android:layout_width="wrap_content"
  	                android:layout_height="wrap_content"
  	                android:layout_centerInParent="true"
  	                android:gravity="center"
  	                android:text="@string/ai_talk_help"
  	                android:singleLine="false"/>
  	        </RelativeLayout>
  	        <LinearLayout 
  	            android:layout_width="fill_parent"
  	            android:layout_height="0px"
  	            android:layout_weight="253">
  	            <RelativeLayout 
  	                android:layout_width="0px"
  	                android:layout_height="fill_parent"
  	                android:layout_weight="413">
  	                <TextView 
  	                    android:id="@+id/ai_talk_current_mode"
  	                    android:layout_width="wrap_content"
  	                    android:layout_height="wrap_content"
  	                    android:layout_centerInParent="true"
  	                    android:gravity="center"
  	                    android:visibility="gone"/>
  	            </RelativeLayout>
<!--   	            <ImageView 
  	                android:id="@+id/ai_talk_start"
  	                android:layout_width="0px"
  	                android:layout_height="fill_parent"
  	                android:layout_weight="254"
  	                android:clickable="true"
  	                android:src="@drawable/ai_talk_start_normal"/> -->
  	            <RelativeLayout 
  	                android:layout_width="0px"
  	                android:layout_height="fill_parent"
  	                android:layout_weight="413">
  	                <TextView 
  	                    android:id="@+id/ai_talk_current_level"
  	                    android:layout_width="wrap_content"
  	                    android:layout_height="wrap_content"
  	                    android:layout_centerInParent="true"
  	                    android:gravity="center"
  	                    android:visibility="gone"/>
  	            </RelativeLayout>
  	        </LinearLayout>
  	        <FrameLayout 
  	            android:layout_width="fill_parent"
  	            android:layout_height="0px"
  	            android:layout_weight="206">
  	            <ImageView 
  	                android:id="@+id/ai_talk_voice_line"
  	                android:layout_width="fill_parent"
  	                android:layout_height="fill_parent"
  	                android:scaleType="fitXY"
  	                android:src="@drawable/ai_talk_voice_line"/>
  	            <ImageView 
  	                android:id="@+id/ai_talk_voice_line_anim"
  	                android:layout_width="fill_parent"
  	                android:layout_height="fill_parent"
  	                android:scaleType="fitXY"
  	                android:src="@anim/ai_talk_voice_line_list"
  	                android:visibility="invisible"/>
  	        </FrameLayout>
  	        <View 
  	            android:layout_width="fill_parent"
  	            android:layout_height="0px"
  	            android:layout_weight="21"/>
  	    </LinearLayout>
  	</LinearLayout>
  	<LinearLayout 
  	    android:layout_width="fill_parent"
  	    android:layout_height="fill_parent"
  	    android:orientation="vertical">
  	    <View 
  	        android:layout_width="fill_parent"
  	        android:layout_height="0px"
  	        android:layout_weight="1296"
  	        android:visibility="invisible"/>
  	    <LinearLayout 
  	        android:layout_width="fill_parent"
  	        android:layout_height="0px"
  	        android:layout_weight="404">
  	        <View 
  	            android:layout_width="0px"
  	            android:layout_height="fill_parent"
  	            android:layout_weight="115"/>
  	        <FrameLayout 
  	            android:layout_width="0px"
  	            android:layout_height="fill_parent"
  	            android:layout_weight="850">
  	            <ImageView 
  	                android:id="@+id/ai_talk_start"
  	                android:layout_width="fill_parent"
  	                android:layout_height="fill_parent"
  	                android:clickable="true"
  	                android:src="@drawable/ai_talk_start_normal"/>
  	            <LinearLayout 
  	                android:layout_width="fill_parent"
  	                android:layout_height="fill_parent"
  	                android:orientation="vertical">
  	                <View 
  	                    android:layout_width="fill_parent"
  	                    android:layout_height="0px"
  	                    android:layout_weight="108"/>
  	                <ImageView 
  	                    android:layout_width="fill_parent"
  	                    android:layout_height="0px"
  	                    android:layout_weight="168"
  	                    android:src="@drawable/ai_talk_mike"/>
  	                <RelativeLayout 
  	                    android:layout_width="fill_parent"
  	                    android:layout_height="0px"
  	                    android:layout_weight="88">
  	                    <TextView 
  	                        android:layout_width="wrap_content"
  	                        android:layout_height="wrap_content"
  	                        android:layout_centerInParent="true"
  	                        android:text="@string/ai_talk_info"
  	                        android:textColor="@color/white"/>
  	                </RelativeLayout>
  	                <View 
  	                    android:layout_width="fill_parent"
  	                    android:layout_height="0px"
  	                    android:layout_weight="86"/>
  	            </LinearLayout>
  	        </FrameLayout>
  	        <View 
  	            android:layout_width="0px"
  	            android:layout_height="fill_parent"
  	            android:layout_weight="115"/>
  	    </LinearLayout>
  	    <View 
  	        android:layout_width="fill_parent"
  	        android:layout_height="0px"
  	        android:layout_weight="152"/>
  	</LinearLayout>
</FrameLayout>