<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    android:orientation="vertical" 
    android:id="@+id/rl_main" 
    android:focusable="true" 
    android:focusableInTouchMode="true" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background_settings"    
        android:orientation="vertical">
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="124"
	        android:paddingLeft="@dimen/layout_margin"
	        android:paddingRight="@dimen/layout_margin"
            android:onClick="onPasswordStatus"
            android:background="@drawable/background_settings_item_selector">
            <TextView 
                android:id="@+id/password_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/password_open"
                android:textColor="@color/password_enalbe"
                android:textSize="@dimen/set_mode_item_text_size"/>
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="124"
	        android:paddingLeft="@dimen/layout_margin"
	        android:paddingRight="@dimen/layout_margin"
            android:onClick="onPasswordChange"
            android:background="@drawable/background_settings_item_selector">
            <TextView 
                android:id="@+id/password_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/password_change"
                android:textColor="@color/password_enalbe"
                android:textSize="@dimen/set_mode_item_text_size"/>
        </RelativeLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1148"/>
    </LinearLayout>
</LinearLayout>