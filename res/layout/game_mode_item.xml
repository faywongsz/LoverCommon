<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rt_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:background="@drawable/game_mode_item_bg_1" >

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="250dip"
         android:layout_centerHorizontal="true"
         android:orientation="vertical" >

         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="0dip"
             android:layout_weight="8"
             android:paddingBottom="10dip"
             android:paddingTop="10dip" >

             <ImageView
                 android:id="@+id/item_iv"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:layout_gravity="center"
                 android:contentDescription="@null"
                 android:src="@drawable/game_mode_default_icon" />
         </LinearLayout>

         <LinearLayout
             android:id="@+id/item_layout"
             android:layout_width="fill_parent"
             android:layout_height="0dip"
             android:layout_weight="5"
             android:paddingBottom="10dip" >

             <LinearLayout
                 android:layout_width="0px"
                 android:layout_height="wrap_content"
                 android:layout_gravity="bottom"
                 android:layout_weight="2"
                 android:gravity="center_horizontal"
                 android:orientation="vertical" >

                 <TextView
                     android:id="@+id/item_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:singleLine="true"
                     android:textColor="@color/white"
                     android:textSize="@dimen/text_size_small" />

                 <TextView
                     android:id="@+id/item_size"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingTop="2dip"
                     android:singleLine="true"
                     android:text="@string/game_mode_size"
                     android:textColor="@color/white"
                     android:textSize="@dimen/text_size_small" />

                 <Button
                     android:id="@+id/item_iv_flag_btn"
                     android:layout_width="100dip"
                     android:layout_height="40dip"
                     android:layout_marginTop="5dip"
                     android:background="@drawable/game_mode_btn_bg_selector"
                     android:text="@string/game_mode_downloading"
                     android:textColor="#ffb54f60"
                     android:textSize="@dimen/text_size_small" />
             </LinearLayout>

         </LinearLayout>

         <ImageView
             android:id="@+id/item_iv_flag"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:contentDescription="@null"
             android:src="@drawable/game_mode_flag_download"
             android:visibility="gone" />
         
     </LinearLayout>
           
</RelativeLayout>