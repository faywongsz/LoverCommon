<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background_common">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/base_mode_animation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/base_mode_animation_1"
            android:contentDescription="@null" />
        
    </LinearLayout>

  	<LinearLayout
  	    android:layout_width="match_parent"
  	    android:layout_height="0dip"
  	    android:layout_weight="1"
  	    android:orientation="vertical" >

  	    <View 
  	        android:layout_width="match_parent"
  	        android:layout_height="0dip"
  	        android:layout_weight="1"/>
  	    
  		<TextView
  		    android:id="@+id/base_mode_level"
  		    android:layout_width="match_parent"
  		    android:layout_height="0dip"
  		    android:layout_weight="4"
  		    android:gravity="center"
  		    android:text="@string/basic_mode_levle" 
  		    android:textSize="@dimen/text_size_large"
  		    android:textColor="@color/pink_tips" />

  		<RelativeLayout
  		    android:layout_width="match_parent"
  		    android:layout_height="0dip"
  		    android:layout_weight="10"
  		    android:layout_marginLeft="20dip"
  		    android:layout_marginRight="20dip" >

  			<ImageView
  			    android:id="@+id/basic_mode_voice_animation"
  			    android:layout_width="wrap_content"
  			    android:layout_height="match_parent"
  			    android:layout_centerInParent="true"
  			    android:src="@drawable/base_mode_voice_animation"
  			    android:visibility="invisible"
  			    android:contentDescription="@null" />
  			
  			<ImageView
  			    android:id="@+id/basic_mode_voice_bg"
  			    android:layout_width="wrap_content"
  			    android:layout_height="match_parent"
  			    android:layout_centerInParent="true"
  			    android:src="@drawable/base_mode_voice_animation_1"
  			    android:contentDescription="@null" />
  			
  			<ImageView
  			    android:id="@+id/basic_mode_voice_record"
  			    android:layout_width="wrap_content"
  			    android:layout_height="match_parent"
  			    android:layout_centerInParent="true"
  			    android:src="@drawable/base_mode_voice_record_selector"
  			    android:contentDescription="@null" />
  			  		    
  		</RelativeLayout>
  		
  	    <View 
  	        android:layout_width="match_parent"
  	        android:layout_height="0dip"
  	        android:layout_weight="1"/>
  	    
  		<TextView
  		    android:id="@+id/base_mode_voice_tips"
  		    android:layout_width="match_parent"
  		    android:layout_height="0dip"
  		    android:layout_weight="6"
  		    android:gravity="center"
  		    android:text="@string/basic_mode_voice_tips" 
  		    android:textSize="@dimen/text_size_medium"
  		    android:textColor="@color/pink_tips" />
  		
  	    <View 
  	        android:layout_width="match_parent"
  	        android:layout_height="0dip"
  	        android:layout_weight="1"/>
  	    
  	</LinearLayout>
    
</LinearLayout>